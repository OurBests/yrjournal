@model JournalModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    *{
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 class="rows-title" style="border: 0;">ژورنال معاملاتی</h2>
    </div>
    <div class="col-md-3">
        <img class="logo" src="~/images/logo.png"/>
    </div>
</div>
    <div class="row part-mt1">
        <h2 class="rows-title first-info-title">اطلاعات اولیه</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <dt>جفت ارز</dt>
            <dd>@Model.PairName</dd>
        </div>
        <div class="col-md-3">
            <dt for="Quantity">حجم معامله</dt>
            <dd>@Model.Quantity</dd>
        </div>
        <div class="col-md-3">
            <dt for="Type" class="eng-txt">Long/Short</dt>
            <dd>@Model.Type</dd>
        </div>
        <div class="col-md-3">
            <dt for="PL">نتیجه: سود/ضرر (درصد)</dt>
            <dd>@Model.PL</dd>
        </div>
    </div>
    <div class="row  part-mt1">
        <div class="col-md-6">
            <div class="row">
                <h2 class="rows-title eng-txt">Signal</h2>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <dt for="SignalTimeFrame" class="eng-txt">Time Frame</dt>
                    <dd>@Model.SignalTimeFrame</dd>
                </div>
                <div class="col-md-4">
                    <dt for="MainSignal">سیگنال اصلی</dt>
                    <dd>@Model.MainSignal</dd>
                </div>
                <div class="col-md-4">
                    <dt for="ConfirmationSignal">سیگنال فرعی</dt>
                    <dd>@Model.ConfirmationSignal</dd>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <h2 class="rows-title eng-txt">Entry</h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <dt for="EntryTimeFrame" class="eng-txt">Time Frame</dt>
                    <dd>@Model.EntryTimeFrame</dd>
                </div>
                <div class="col-md-6" style="text-align: center;">
                    <dt for="E1">E1</dt>
                    <dd>@Model.EntryPhase</dd>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row  part-mt1">
        <div class="col-md-6">
            <div class="row">
                <h2 class="rows-title eng-txt">Money Management</h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <dt for="RR" class="eng-txt">R:R</dt>
                    <dd>@Model.RR</dd>
                </div>
                <div class="col-md-6">
                    <dt for="MoneyPercent">درصد سرمایه</dt>
                    <dd>@Model.MoneyPercent</dd>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <h2 class="rows-title eng-txt">Trade Management</h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <dt for="RiskFree" class="eng-txt">RiskFree</dt>
                    <dd>@Model.RiskFree</dd>
                </div>
                <div class="col-md-6">
                    <dt for="TrendFollowing" class="eng-txt">TrendFollowing</dt>
                    <dd>@Model.TrendFollowing</dd>
                </div>
            </div>
        </div>
    </div>
    <div class="row  part-mt1">
        <div class="col-md-6">
            <img src="data:image/png;base64, @Model.File" style="width: 100%;">
        </div>
        <div class="col-md-6">
            <dt for="Description">توضیحات بیشتر</dt>
            <dd>@Model.Description</dd>
        </div>
    </div>
    <div class="row part-mt1">
        <div class="col-md-12">
            <a href="javascript: window.print();" type="submit" class="btn btn-success" style="float: left;">چاپ</a>
        </div>
    </div>